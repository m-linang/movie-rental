@model MyVidly.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <ul>
            <li>Membership Type: @Model.MembershipType.MembershipTypeValue</li>
            @if (Model.Birthdate == null)
            {
                <li>No Bithdate!</li>
            }
            else
            {

                <li>@Html.DisplayNameFor(model => model.Birthdate): @Model.Birthdate.Value.ToShortDateString()</li>
            }

        </ul>
    </div>
</div>

