@model MyVidly.Models.Movies
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <ul>
            <li>@Html.LabelFor(model => model.Genre): @Model.Genre.Name</li>
            <li>@Html.LabelFor(model => model.ReleasedDate): @Model.ReleasedDate.Value.ToLongDateString()</li>
            <li>@Html.LabelFor(model => model.DateAdded): @Model.DateAdded.Value.ToLongDateString()</li>
            <li>@Html.LabelFor(model => model.Stocks): @Model.Stocks.ToString()</li>
        </ul>
    </div>
</div>



