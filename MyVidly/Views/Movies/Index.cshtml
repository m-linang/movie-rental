@model  IEnumerable<MyVidly.Models.Movies> 
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped table-hover">
            <caption>List of Movies</caption>
            <thead>
                <tr>
                    <th>Movies</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td>No Movies!</td>
                    </tr>
                }
                else
                {
                    foreach (var movie in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                            <td>@movie.Genre.Name</td>
                        </tr>
                    }
                }
            </tbody>

        </table>
    </div>
    <div class="col-md-12">
        @Html.ActionLink("Add Movie", "New", "Movies", new { @class = "btn btn-danger" })
    </div>
</div>
